---
import type { GetStaticPaths } from "astro";

import Layout from '@layouts/Layout.astro';
import { projects } from '@lib/projects'

const { id } = Astro.params
const project = projects.find(project => project.id === id)

export const getStaticPaths = (() => {
  return projects.map(project => ({
    params: {
      id: project.id
    }
  }));
}) satisfies GetStaticPaths;
---

<Layout color="bg-gradient-to-r from-black via-white/[0.05] to-white/[0.08]" title="Luis Osorio | luisfosg">
  <main class="w-full h-full">
    <header class="relative w-full rounded-lg h-60">
      <img transition:name={`project-${project?.id}`} class="rounded-lg opacity-30 object-cover w-full h-full" src={project?.image} alt={project?.name} />

      <div class="absolute inset-0 rounded-lg w-full h-full bg-gradient-to-b from-black/10 via-black/30 to-black/60"></div>

      <div class="absolute z-50 flex justify-center inset-0 mt-[11rem]">
        <span class="text-center text-4xl text-transparent font-bold bg-clip-text capitalize bg-gradient-to-r from-gray-400 to-white/90">{project?.name}</span>
      </div>
    </header>
  </main>
</Layout>
