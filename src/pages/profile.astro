---
import { Image } from 'astro:assets';

import Layout from '@layouts/Layout.astro';
import { links } from '@lib/link-tree'
import Link from '@components/Link.astro';
---

<Layout color='bg-gradient-to-r from-gray-800 via-gray-800/90 to-gray-700' title="Luis Osorio | luisfosg">
  <main class="flex h-full flex-col items-center justify-center">
    <Image class="ml-2 border-8 border-zinc-400 bg-white/20 rounded-full" width="180" height="180" src="/images/avatar.png" alt="luisfosg" />
    <h1 class="mt-3 title text-2xl uppercase font-thin text-indigo-200">Luis Osorio</h1>

    <section class="w-3/4 mx-auto grid lg:grid-cols-3 gap-3 mt-7">
      {links.map(link => <Link link={link} />)}
    </section>

  </main>
</Layout>

<style>
@import url('https://fonts.googleapis.com/css2?family=Rajdhani:wght@300&display=swap');

.title {
  font-family: 'Rajdhani';
}
</style>
