---
import MenuItem from "@components/aside/MenuItem.astro";
import Profile from "@components/aside/Profile.astro";

import { menuItems } from '@lib/menu'
---

<div id="aside" class="flex flex-col h-[90vh] gap-2 w-full">
  <div class="[grid-area:profile]">
    <Profile />
  </div>

  <div class="[grid-area:main] w-full bg-slate-100 rounded-lg dark:bg-zinc-900 overflow-y-auto">
    <ul class="p-2 dark:bg-transparent rounded-lg">
      {
        menuItems.map(menu => (
          <MenuItem href={menu.link}>
            <span class={menu.icon} /> {menu.name}
          </MenuItem>
        ))
      }
    </ul>
  </div>
</div>

<style>
  #aside {
    display: grid;
    grid-template-areas:
    "profile"
    "main"
    "main";
    grid-template-rows: 10vh 1fr;
  }
</style>
