---
interface Props {
  href?: string;
}

const { href } = Astro.props
---

<li class="cursor-pointer">
  <a class="flex gap-3 rounded-lg text-slate-600 font-medium p-3 dark:hover:bg-zinc-700 hover:text-slate-600 hover:bg-slate-300 items-center dark:text-zinc-400 dark:hover:text-zinc-100" href={href}>
    <slot />
  </a>
</li>
